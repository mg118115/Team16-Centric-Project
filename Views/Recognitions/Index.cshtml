@model IEnumerable<Team_16_Centric_Project.Models.Recognition>

@{
    ViewBag.Title = "Recognize";
}

    <h2>Recognize a Peer</h2>

<p>
    @Html.ActionLink("Send Recognition", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.EmployeeRecognition.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recognitionDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.EmployeeRecognition.firstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.recognitionDate)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.recognitionID })
           
        </td>
    </tr>
}

</table>
